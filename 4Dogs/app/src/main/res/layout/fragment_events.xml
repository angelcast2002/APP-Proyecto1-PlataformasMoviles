<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.events.EventsFragment">

    <TextView
        android:id="@+id/eventsFragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proximosEventos"
        android:textSize="@dimen/defaultTitleSize"
        android:textColor="@color/color_feldgrau"
        android:fontFamily="@font/krub_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginHorizontal="@dimen/margin8"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_eventFragment_firstEvent"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardHeight"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginEnd="@dimen/margin8"
        android:background="@drawable/event_card_round_corners"
        app:layout_constraintStart_toStartOf="@id/eventsFragment_title"
        app:layout_constraintTop_toBottomOf="@id/eventsFragment_title"
        app:layout_constraintEnd_toStartOf="@id/card_eventFragment_secondEvent"
        app:layout_constraintHorizontal_chainStyle="packed"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/title_card_round_corners"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8"
                android:text="@string/fecha_eventCard"
                android:fontFamily="@font/krub_bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_eventFragment_secondEvent"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardHeight"
        android:layout_marginEnd="@dimen/margin8"
        android:background="@drawable/event_card_round_corners"
        app:cardCornerRadius="@dimen/margin8"
        app:layout_constraintStart_toEndOf="@id/card_eventFragment_firstEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_eventFragment_firstEvent"
        app:layout_constraintBottom_toBottomOf="@id/card_eventFragment_firstEvent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/title_card_round_corners"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8"
                android:text="@string/fecha_eventCard"
                android:fontFamily="@font/krub_bold"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_eventFragment_thirdEvent"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardHeight"
        android:layout_marginTop="@dimen/margin8"
        android:background="@drawable/event_card_round_corners"
        app:cardCornerRadius="@dimen/margin8"
        app:layout_constraintStart_toStartOf="@id/eventsFragment_title"
        app:layout_constraintEnd_toEndOf="@id/card_eventFragment_firstEvent"
        app:layout_constraintTop_toBottomOf="@id/card_eventFragment_firstEvent"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/title_card_round_corners"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8"
                android:text="@string/fecha_eventCard"
                android:fontFamily="@font/krub_bold"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_eventFragment_fourthEvent"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardHeight"
        android:layout_marginTop="@dimen/margin8"
        android:background="@drawable/event_card_round_corners"
        app:cardCornerRadius="@dimen/margin8"
        app:layout_constraintStart_toStartOf="@id/card_eventFragment_secondEvent"
        app:layout_constraintEnd_toEndOf="@id/card_eventFragment_secondEvent"
        app:layout_constraintTop_toBottomOf="@id/card_eventFragment_secondEvent"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/title_card_round_corners"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8"
                android:text="@string/fecha_eventCard"
                android:fontFamily="@font/krub_bold"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/divisionLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divisionline"
        android:layout_marginHorizontal="@dimen/margin8"
        android:layout_marginTop="@dimen/margin20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_eventFragment_thirdEvent"
        />

    <TextView
        android:id="@+id/text_consejos_eventsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/krub_bold"
        android:text="@string/consejos"
        android:textColor="@color/color_feldgrau"
        android:textSize="@dimen/consejosSize"
        app:layout_constraintStart_toStartOf="@id/divisionLine"
        app:layout_constraintTop_toBottomOf="@id/divisionLine" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="313dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_consejos_eventsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>