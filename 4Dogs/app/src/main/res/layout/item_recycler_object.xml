<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_itemPlace">

    <TextView
        android:id="@+id/textView_attribute_recycleView"

        android:fontFamily="@font/krub_bold"
        android:textColor="@color/color_feldgrau"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView_text_recycleView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/marginSize_small"
        android:textSize="@dimen/size_atributteRecyclerTips"


        tools:text="Amigable con los demas perros"/>
    <TextView
        android:id="@+id/textView_text_recycleView"

        android:fontFamily="@font/krub_medium"
        android:textColor="@color/color_feldgrau"

        android:layout_marginBottom="@dimen/marginSize_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_attribute_recycleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Su perro es bueno con las demas personas"
        android:gravity="center"
        android:textSize="@dimen/size_textRecyclerTipsText"/>

</androidx.constraintlayout.widget.ConstraintLayout>