<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.calendar.EditProfileFragment"
    android:background="@drawable/app_background_with_gradient">

    <ImageButton
        android:id="@+id/bt_regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backbutton"
        android:background="@null"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/bt_editarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:fontFamily="@font/krub_bold"
        android:textColor="@color/color_feldgrau"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>


    <ImageView
        android:id="@+id/img_pet_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/petName_ProfileLayout"
        android:layout_marginTop="@dimen/marginSize_extraLarge"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/petName_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_pet_ProfileLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/marginSize_medium"
        tools:text="CHISPA"
        android:textSize="@dimen/sizeText_petName"
        android:textColor="@color/color_feldgrau"
        android:fontFamily="@font/krub_bold"
        />

    <TextView
        android:id="@+id/text_razaText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petName_ProfileLayout"
        android:text="Raza:"
        android:fontFamily="@font/krub_bold"
        />

    <TextView
        android:id="@+id/text_dato_razaText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginStart="125dp"
        app:layout_constraintStart_toEndOf="@+id/text_razaText_ProfileLayout"
        app:layout_constraintTop_toBottomOf="@+id/petName_ProfileLayout"
        tools:text="Chispa"
        android:fontFamily="@font/krub_bold"/>

    <TextView
        android:id="@+id/text_pesoText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_razaText_ProfileLayout"
        android:text="Peso:"
        android:fontFamily="@font/krub_bold" />


    <TextView
        android:id="@+id/text_dato_pesoText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/text_dato_razaText_ProfileLayout"
        app:layout_constraintTop_toBottomOf="@+id/text_dato_razaText_ProfileLayout"
        tools:text="35 lb"
        android:fontFamily="@font/krub_bold"/>

    <TextView
        android:id="@+id/text_colorText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/krub_bold"
        android:text="Color:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_pesoText_ProfileLayout" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/text_dato_pesoText_ProfileLayout"
        app:layout_constraintTop_toBottomOf="@+id/text_dato_pesoText_ProfileLayout"
        tools:text="Cafe"
        android:fontFamily="@font/krub_bold"/>

    <TextView
        android:id="@+id/text_largoText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/krub_bold"
        android:text="Largo:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_colorText_ProfileLayout" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:text="35cm"
        android:fontFamily="@font/krub_bold"/>

    <TextView
        android:id="@+id/text_altoText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alto:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:fontFamily="@font/krub_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_largoText_ProfileLayout" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="25cm"
        android:fontFamily="@font/krub_bold"/>

    <TextView
        android:id="@+id/text_comidaFavText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comida Favorita:"
        android:fontFamily="@font/krub_bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_altoText_ProfileLayout" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:text="Pizza"
        android:fontFamily="@font/krub_bold"/>

    <TextView
        android:id="@+id/text_conductaText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conducta:"
        android:fontFamily="@font/krub_bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_comidaFavText_ProfileLayout" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:text="agresivo"
        android:fontFamily="@font/krub_bold"/>

    <TextView
        android:id="@+id/text_jugueteFavText_ProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juguete Favorito:"
        android:fontFamily="@font/krub_bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_conductaText_ProfileLayout" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:text="Pelota de tenis"
        android:fontFamily="@font/krub_bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>