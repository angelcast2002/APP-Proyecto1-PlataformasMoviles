<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.addevents.AddEventBottomSheetFragment"
    >

    <TextView
        android:id="@+id/add_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:fontFamily="@font/krub_medium"
        android:text="@string/nuevo_recordatorio"
        android:textColor="@color/color_feldgrau"
        android:textSize="@dimen/size_generalTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eventTitle_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginHorizontal="@dimen/margin30"
        android:hint="@string/tituloEvento"
        android:textColorHint="@color/color_feldgrau"

        style="@style/Widget.Design.TextInputLayout"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_event_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eventTitle_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_feldgrau"
            android:fontFamily="@font/krub_medium"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eventDate_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin30"
        android:hint="@string/eventDate"
        android:textColorHint="@color/color_feldgrau"

        style="@style/Widget.Design.TextInputLayout"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventTitle_text_input_layout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eventDate_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_feldgrau"
            android:fontFamily="@font/krub_medium"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eventHour_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin30"
        android:hint="@string/hora"
        android:textColorHint="@color/color_feldgrau"

        style="@style/Widget.Design.TextInputLayout"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventDate_text_input_layout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eventHour_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_feldgrau"
            android:fontFamily="@font/krub_medium"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eventDescription_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin30"
        android:hint="@string/description"
        android:textColorHint="@color/color_feldgrau"

        style="@style/Widget.Design.TextInputLayout"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventHour_text_input_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eventDescription_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_feldgrau"
            android:fontFamily="@font/krub_medium"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_create_event"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin50"
        android:text="SAVE"
        android:layout_marginHorizontal="@dimen/margin80"
        android:backgroundTint="@color/color_feldgrau"
        app:layout_constraintTop_toBottomOf="@id/eventDescription_text_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>